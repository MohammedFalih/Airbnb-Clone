<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-20 lg:max-w-7xl lg:px-1">
    <div class="mt-1 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
      <% @properties.each do |property| %>
        <div class="group relative">
          <div class="relative rounded-md bg-red-200">
            <div class="swiper">
              <div class="swiper-wrapper">
                <% property.images.each do |image| %>
                  <%= image_tag image, class:"swiper-slide h-full w-full object-cover object-center lg:h-full lg:w-full" %>
                <% end %>
              </div>
              <div class="swiper-button-prev"></div>
              <div class="swiper-button-next"></div>
            </div>
            <div style="position: absolute; right: 0; top: 0; z-index: 100; padding: 8px;">
              <svg 
    data-controller="wishlist" 
    data-user-logged-in="<%= user_signed_in? %>"  
    data-action="click->wishlist#updateWishlist" 
                data-status="<%= property.wishlisted_by?(current_user) %>" 
                xmlns="http://www.w3.org/2000/svg" 
                fill="<%= property.wishlisted_by?(current_user) ? '#FF5A5F' : 'none' %>" 
                class="h-6 w-6" 
                viewBox="0 0 24 24" 
                stroke-width="2" 
                stroke="white">
                <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
              </svg>
            </div>
          </div>
          <div class="mt-4 flex justify-between">
            <div class="w-full">
              <div class="flex justify-between ">
                <h3 class="text-md font-bold text-black-700">
                  <a href="#">
                    <span aria-hidden="true" class="absolute inset-0"></span>
                    <%= "#{property.city }, #{property.country }" %>
                  </a>
                </h3>
                <p class="flex items-center justify-between w-14 px-2  text-sm font-medium text-gray-900">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" aria-hidden="true" role="presentation" focusable="false" style="display: block; height: 12px; width: 12px; fill: currentcolor;"><path fill-rule="evenodd" d="m15.1 1.58-4.13 8.88-9.86 1.27a1 1 0 0 0-.54 1.74l7.3 6.57-1.97 9.85a1 1 0 0 0 1.48 1.06l8.62-5 8.63 5a1 1 0 0 0 1.48-1.06l-1.97-9.85 7.3-6.57a1 1 0 0 0-.55-1.73l-9.86-1.28-4.12-8.88a1 1 0 0 0-1.82 0z"></path></svg>
                  <%= (property.average_final_rating).round(1) %>
                </p>
              </div>
              <p class="mt-1 text-sm text-gray-500">Hosted by Falih</p>
              <p class="mt-1 text-sm text-gray-500">20-25 Jul</p>
              <p class="mt-1 text-sm text-black-800"><strong><%= humanized_money_with_symbol(property.price) %></strong> per night.</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
